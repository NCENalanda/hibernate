<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://xmlns.jcp.org/xml/ns/javaee">
  <display-name>HBProj07-LayeredApplicationStudentUseCase</display-name>
  <welcome-file-list>
    <welcome-file>get_result.html</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>controller</servlet-name>
    <servlet-class>com.nt.controller.StudentControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>com.nt.listeners.MyScListener</listener-class>
  </listener>
</web-app>